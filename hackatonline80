filter <- unique(tt[diff<60]$fahrt_iddate)
subtt <- tt[fahrt_iddate %in% filter]
haltsum1 <- subtt[fullf!= "TRIS",.(dropsum = mean(diff)), by= .(fullf)][,headway:=60]

filter <- unique(tt[diff<120]$fahrt_iddate)
